@model BookLibrary.Models.Domain.Customer

@{
    ViewData["Title"] = "Add customer";
}

<h2>Add a new customer</h2>

<hr />

<div class="row">
        <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="red-text"></div>
        <div class="input-field col s6">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="red-text"></span>
            </div>
        <div class="input-field col s6">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="red-text"></span>
            </div>
        <div class="input-field col s12">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="red-text"></span>
            </div>
        <div class="input-field col s12">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="red-text"></span>
            </div>
        <div class="row right-align">
            <a asp-action="Index" class="blue-text btn-flat">Back to List</a>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
</div>

